    "target": "ES2018",
    "module": "CommonJS",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "types",
    "outDir": "cjs",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "sourceMap": true
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules"
  ],
}